. "$DIR/utils.fl"

loadpkgfile() {
  . "$DIR/default.fl" "$1" "$2"

  cd $srcdir || die "$srcdir does not exist"
  msg_line "srcdir [ $srcdir ] "

  file_exists $flaskfile
  msg "pkg [ $flaskfile ] "
  . "$flaskfile"

  . "$DIR/install.fl"
}

loadtemplates() {
  if ! [[ -z "$template" ]]; then
    for tmpl in ${template[@]}; do
      . "$DIR/templates/$tmpl.fl" && msg_line "adding template $tmpl" || die "template '$tmpl' does not exist"
    done
  fi
}
